@model YouConf.Data.Entities.Speaker
@{
    ViewBag.Title = "Remove speaker";
}

<h2>@Model.Name</h2>
<h3>Are you sure you want to remove this speaker?</h3>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Remove" /> |
        @Html.ActionLink("Cancel", "Details", "Conference", new { hashTag = (string)ViewBag.ConferenceId }, null)
    </p>
}
